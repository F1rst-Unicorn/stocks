# Maintainer: aliena <dairyman@njsm.de>
pkgname=stocks-server
pkgver=0.2
pkgrel=5
pkgdesc="Manages a household's stocks"
arch=('i686' 'x86_64')
url="https://github.com/F1rst-Unicorn/stocks"
license=('MIT')
depends=('jre8-openjdk'
         'java-environment'
         'nginx'
         'openssl'
         'mariadb')
makedepends=('git'
			 'wget'
			 'maven')
source=("git://www.github.com/F1rst-Unicorn/stocks")
install=stocks-server.install
sha512sums=('SKIP')
backup=("etc/$pkgname/stocks.properties"
		"usr/lib/$pkgname/server"
		"usr/lib/$pkgname/setup-ca")

build() {
    cd "$srcdir/stocks"
    
    mkdir -p deploy-server/root/jetty-base/wars

    cd server
    mvn -Dmaven.test.skip=true package
    cd ..
    cp server/target/server-$pkgver.war deploy-server/root/jetty-base/wars/server.war

    cd sentry
    mvn -Dmaven.test.skip=true package
    cd ..
    cp sentry/target/sentry-$pkgver.war deploy-server/root/jetty-base/wars/sentry.war
                        
    wget -4 -O jetty.tar.gz "http://eclipse.org/downloads/download.php?file=/jetty/stable-9/dist/jetty-distribution-9.3.9.v20160517.tar.gz&r=1"
}

package() {
    cd "$srcdir/stocks"
    
    mkdir -p $pkgdir/usr/share/$pkgname
    cp -r deploy-server/root $pkgdir/usr/share/$pkgname
    cp deploy-server/schema.sql $pkgdir/usr/share/$pkgname/schema.sql
    cp deploy-server/nginx.conf $pkgdir/usr/share/$pkgname/nginx.example.conf
    
    mkdir -p $pkgdir/usr/share/$pkgname/root/CA/intermediate
    cp deploy-server/openssl.cnf $pkgdir/usr/share/$pkgname/root/CA/
    cp deploy-server/openssl_intermediate.cnf $pkgdir/usr/share/$pkgname/root/CA/intermediate/openssl.cnf
    
    mkdir -p $pkgdir/usr/lib/$pkgname/
    cp deploy-server/setup-ca $pkgdir/usr/lib/$pkgname/
    cp deploy-server/server $pkgdir/usr/lib/$pkgname/
    cp deploy-server/nginx-reload $pkgdir/usr/lib/$pkgname/
    chmod -R 755 $pkgdir/usr/lib/$pkgname
    
    mkdir -p $pkgdir/etc/$pkgname/
    cp deploy-server/stocks.properties $pkgdir/etc/$pkgname
    
    mkdir -p $pkgdir/usr/share/doc/$pkgname
    cp README.md $pkgdir/usr/share/doc/$pkgname
    chmod -R 755 $pkgdir/usr/share/doc/$pkgname
    
    tar xzf jetty.tar.gz
    mkdir -p $pkgdir/opt/stocks-jetty
    mv jetty-distribution-*/* $pkgdir/opt/stocks-jetty
    chown -R root:root $pkgdir/opt/stocks-jetty
    rm -rf $pkgdir/opt/stocks-jetty/demo-base
    
    mkdir -p $pkgdir/usr/lib/systemd/system/
    cp deploy-server/stocks-jetty.service $pkgdir/usr/lib/systemd/system/

    mkdir -p $pkgdir/usr/share/licenses/$pkgname/
    cp LICENSE.md $pkgdir/usr/share/licenses/$pkgname/
    
    mkdir -p $pkgdir/var/log/$pkgname
    touch $pkgdir/var/log/$pkgname/stocks.log
}
