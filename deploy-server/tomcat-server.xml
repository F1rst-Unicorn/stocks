<?xml version='1.0' encoding='utf-8'?>
<Server port="-1">
        <Listener 
                className="org.apache.catalina.startup.VersionLoggerListener" />
        <Listener 
                className="org.apache.catalina.core.AprLifecycleListener" 
                SSLEngine="on" />
        <Listener 
                className="org.apache.catalina.core.JreMemoryLeakPreventionListener"/>
        <Listener 
                className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener"/>
        <Listener 
                className="org.apache.catalina.core.ThreadLocalLeakPreventionListener"/>

        <Service name="Stocks sentry">
                <Connector 
                        port="10916" 
                        protocol="HTTP/1.1"
                        connectionTimeout="5" 
                        address="localhost"/>

                <Engine name="Catalina" defaultHost="localhost">
                        <Host 
                                name="localhost"  
                                appBase="/usr/share/stocks-server/root/sentry"
                                unpackWARs="true" 
                                autoDeploy="true">
                        </Host>
                </Engine>
        </Service>
        <Service name="Stocks server">
                <Connector 
                        port="10917" 
                        protocol="HTTP/1.1"
                        connectionTimeout="5" 
                        address="localhost"/>

                <Engine name="Catalina" defaultHost="localhost">
                        <Host 
                                name="localhost"  
                                appBase="/usr/share/stocks-server/root/server"
                                unpackWARs="true" 
                                autoDeploy="true">
                        </Host>
                </Engine>
        </Service>
</Server>
