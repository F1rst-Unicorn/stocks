<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure_9_3.dtd">

<Configure id="sslHttpConfig" class="org.eclipse.jetty.server.HttpConfiguration">
    
    <Ref refid="httpConfig">
        <Get id="httpList" name="customizers"/>
    </Ref>
    
    <Set name="customizers"><Ref refid="httpList"/></Set>
    
    <Call name="addCustomizer">
        <Arg>
            <New class="org.eclipse.jetty.server.SecureRequestCustomizer">
        </New>
    </Arg>
    </Call>
    
</Configure>
