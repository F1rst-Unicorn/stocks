<?xml version="1.0" encoding="UTF-8" ?>
<Configuration monitorInterval="30" >
    
    <Appenders>

        <Console
                name="console"
                target="SYSTEM_OUT">
            <PatternLayout pattern="%p %c{1}:%L %m%n" />
        </Console>
        
    </Appenders>

    <Loggers>

        <Root level="debug">
            <AppenderRef ref="console"/>
        </Root>
        
    </Loggers>
    
</Configuration>
