<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_scaled_food_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding"
            android:hint="@string/hint_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
            android:id="@+id/item_scaled_food_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

    <ImageButton
            android:id="@+id/fragment_recipe_add_add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/item_scaled_food_amount"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/baseline_delete_black_24" />

    <Spinner
            android:id="@+id/item_scaled_food_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/item_scaled_food_amount"/>


</RelativeLayout>
