<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:padding="8dp">

    <TextView
            android:id="@+id/fragment_recipe_title_ingredients"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_ingredients"/>

    <TextView
            android:id="@+id/fragment_recipe_ingredient_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_title_ingredients"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <TextView
            android:id="@+id/fragment_recipe_title_products"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_ingredient_list"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_products"
            android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/fragment_recipe_product_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_title_products"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <TextView
            android:id="@+id/fragment_recipe_duration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_duration"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_product_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/fragment_recipe_duration_title_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_product_list"
            app:layout_constraintStart_toEndOf="@id/fragment_recipe_duration_title"
            android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/fragment_recipe_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_product_list"
            app:layout_constraintStart_toEndOf="@id/fragment_recipe_duration_title_colon"
            android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/fragment_recipe_instructions"
            app:layout_constraintTop_toBottomOf="@id/fragment_recipe_duration_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
