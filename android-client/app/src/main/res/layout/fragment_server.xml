<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StocksTheme.Activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/fragment_server_url"
        style="@style/StocksTheme.EditText"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_servername"
        android:inputType="textUri" />

    <Switch
        android:id="@+id/fragment_server_expert_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_server_url"
        android:layout_alignEnd="@id/fragment_server_url"
        android:text="@string/hint_expert" />

    <LinearLayout
        android:id="@+id/fragment_server_expert_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_server_expert_switch"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/fragment_server_ca_port"
            style="@style/StocksTheme.EditText"
            android:ems="10"
            android:hint="@string/hint_caport"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/fragment_server_sentry_port"
            style="@style/StocksTheme.EditText"
            android:ems="10"
            android:hint="@string/hint_ticket_port"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/fragment_server_server_port"
            style="@style/StocksTheme.EditText"
            android:ems="10"
            android:hint="@string/hint_server_port"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/fragment_server_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@color/colorAccent"
        android:text="@string/action_continue" />

</RelativeLayout>
