<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/cardBackground"
        android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_recipe_item_product"
            android:layout_margin="8dp">

        <LinearLayout
                android:id="@+id/item_recipe_item_product_scaled_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_recipe_item_product_amounts"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintVertical_chainStyle="packed"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/item_recipe_item_product_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:text="OlivenÃ¶l"
            />

            <TextView
                    android:id="@+id/item_recipe_item_product_scaled_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6pt"
                    android:text="150ml"
            />
        </LinearLayout>

        <ImageButton
                android:id="@+id/item_recipe_item_product_shopping_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shopping_cart_black_24"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_recipe_item_product_amounts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_recipe_item_product_amounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_constraintWidth_default="wrap"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_recipe_item_product_scaled_amount"
                app:layout_constraintEnd_toStartOf="@id/item_recipe_item_product_shopping_cart"
                tools:listitem="@layout/item_amount_incrementor"
                tools:itemCount="3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
