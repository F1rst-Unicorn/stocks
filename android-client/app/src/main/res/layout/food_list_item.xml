<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingRight="@dimen/list_item_padding"
    android:paddingTop="@dimen/list_item_padding"
    android:paddingBottom="@dimen/list_item_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paprika"
        android:id="@+id/item_food_name" />

    <TextView
        android:id="@+id/amount_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/item_food_name"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:text="@string/text_amount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/item_food_name"
        android:layout_toEndOf="@id/amount_string"
        android:paddingTop="4dp"
        android:text="5"
        android:id="@+id/item_food_amount" />

    <ImageView
        android:id="@+id/item_food_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm_black_24dp"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_food_name"
        />

    <TextView
        android:id="@+id/item_food_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/item_food_name"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:text="01.01.2018"
        android:layout_toStartOf="@id/item_food_icon"/>




</RelativeLayout>
