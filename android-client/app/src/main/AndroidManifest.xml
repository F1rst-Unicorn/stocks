<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.njsm.stocks">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/StocksTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/StocksTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".setup.SetupActivity" />
        <activity
            android:name=".UserActivity"
            android:theme="@style/StocksTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_settings" />
        <activity
            android:name=".LocationActivity"
            android:label="@string/title_activity_location"
            android:theme="@style/StocksTheme"></activity>

        <provider
            android:authorities="de.njsm.stocks.providers.StocksContentProvider"
            android:name=".backend.db.StocksContentProvider"></provider>
    </application>

</manifest>